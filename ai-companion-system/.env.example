# AI Companion System - Environment Configuration
# Copy this file to .env and customize for your system

# ============================================
# LLM Settings (Ollama)
# ============================================
OLLAMA_HOST=http://localhost:11434
LLM_MODEL=dolphin-mistral:7b-v2.8
LLM_TEMPERATURE=0.8
LLM_TOP_P=0.9
LLM_MAX_TOKENS=2048
LLM_CONTEXT_WINDOW=8192
LLM_STREAMING=true

# Alternative models (for reference):
# dolphin-mistral:7b-v2.8 (recommended for 8GB VRAM)
# dolphin2.9-mistral-nemo:12b (requires more VRAM)
# wizardlm-uncensored:13b (alternative option)

# ============================================
# Stable Diffusion Settings
# ============================================
SD_API_URL=http://127.0.0.1:7860
SD_ENABLED=true
SD_MODEL=sd_xl_base_1.0.safetensors
SD_VAE=sdxl_vae.safetensors
SD_STEPS=30
SD_CFG_SCALE=7.0
SD_WIDTH=1024
SD_HEIGHT=1024
SD_NEGATIVE_PROMPT=low quality, blurry, distorted, deformed, ugly, bad anatomy
SD_SAMPLER=DPM++ 2M Karras
SD_CLIP_SKIP=2

# ============================================
# Memory Settings (ChromaDB)
# ============================================
MEMORY_ENABLED=true
VECTOR_DB_PATH=./data/chromadb
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
MAX_MEMORY_RESULTS=10
CONVERSATION_HISTORY_LIMIT=50
MEMORY_COLLECTION_PREFIX=character_memory

# ============================================
# Web Search Settings
# ============================================
ENABLE_WEB_SEARCH=true
SEARCH_PROVIDER=duckduckgo
MAX_SEARCH_RESULTS=5
SEARCH_TIMEOUT=10

# ============================================
# Character Settings
# ============================================
DEFAULT_CHARACTER_AVATAR=/assets/default-avatar.png
MAX_CHARACTERS_PER_USER=20
CHARACTER_PRESETS_PATH=./characters/presets

# ============================================
# Image Storage
# ============================================
IMAGE_STORAGE_PATH=./data/images
IMAGE_CACHE_SIZE=100
MAX_IMAGE_SIZE=2048

# ============================================
# Server Settings
# ============================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_URL=http://localhost:5173
DEBUG=true

# ============================================
# Database
# ============================================
DATABASE_URL=sqlite+aiosqlite:///./data/companions.db

# ============================================
# Security (Change in production!)
# ============================================
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ============================================
# CORS Origins
# ============================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# ============================================
# Performance
# ============================================
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=300
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
